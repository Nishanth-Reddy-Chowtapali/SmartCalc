<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.SmartCalc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">#87CEEB</item>
    <item name="colorPrimaryVariant">#227191</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">#166291</item>
    <item name="colorSecondaryVariant">#2279AF</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="21">#103B4C</item>
    <!-- Customize your theme here. -->
</style>

<!-- Material Button Theming -->
<style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
    <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
</style>

<!-- Customizing button -->
<style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">64dp</item>
    <item name="cornerRadius">64dp</item>
</style>
</resources>
